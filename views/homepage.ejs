<div class="content">
    <div class="col-md-12">
    <h1>Password Generator</h1>
    <div class="center-block">
        <div class="row">
            <div class="input-group col-md-6">
              <input type="text" class="form-control" placeholder="Your password will be generated here!">
              <span class="input-group-btn">
                <button class="btn btn-default glyphicon glyphicon-copy" type="button">  Copy</button>
              </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 clearfix">
                <div class="clearfix">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <br />
                            <button class="btn btn-success" type="submit">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Generate Password
                            </button>
                        </div>
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">Requirements</h3>
                            </div>
                            <div class="panel-body">
                                <fieldset>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>Allow Numbers
                                        </label>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>Allow Uppercase
                                        </label>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" checked>Allow Symbols
                                        </label>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
